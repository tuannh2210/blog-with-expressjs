extends ../layout/admin
block title 
  | Create new post
block content
  .row.mt-5
  .col-lg-5.col-md-8.m-auto
      h1.text-center.mb-3
        |   Edit post
      include ../partials/messages
      p= message
      form(action= article._id, method='POST' enctype="multipart/form-data")
        .form-group
          label(for='category') Category
          select#category.form-control(name='category')
            each cate in cates
              if cate._id.toJSON() === article.category._id.toJSON()
                option(value=cate._id selected)=article.category.name
              else 
                option(value=cate._id)=cate.name
        .form-group
          label(for='Title') Title
          input#email.form-control(type='text', name='title', placeholder='Enter Title' value=article.title )
        .form-group
          label(for='images') Images
          input#images.form-control(type='file', name='images', placeholder='Enter Title')
          input(type='hidden' name='image_old' value=article.images)
        .form-group
          label(for='description') Description
          input#description.form-control(type='text', name='description', value= article.description)
        .form-group
          label(for='body') Body
          textarea#body.form-control(type='text', name='body', placeholder='Enter body')= article.body
        .form-group
          label(for='tag') Tag
          input#tag.form-control(type='text', name='tags', placeholder='Enter Tag' value= article.tags)

        button.btn.btn-primary.btn-block.col-md-3.m-auto(type='submit') Save

